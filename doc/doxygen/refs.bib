@article{Macchi_Coppens_2001,
author = "Macchi, Piero and Coppens, Philip",
title = "{Relativistic analytical wave functions and scattering factors for neutral atoms beyond Kr and for all chemically important ions up to I${\sp {$-$}}$}",
journal = "Acta Crystallographica Section A",
year = "2001",
volume = "57",
number = "6",
pages = "656--662",
month = "Nov",
doi = {10.1107/S0108767301010182},
url = {https://doi.org/10.1107/S0108767301010182},
abstract = {Relativistic wave functions for elements with {\it Z}=37{--}54 [Su & Coppens (1998). {\it Acta Cryst.} A{\bf 54}, 646{--}652] have been fitted with a linear combination of Slater-type functions as defined by Bunge, Barrientos & Bunge [{\it At. Data Nucl. Data Tables} (1993), {\bf 53}, 113{--}162], for use in charge-density analysis and other applications. In addition, numerical relativistic wave functions have been calculated for all chemically relevant ions up to {\it Z}=54, and corresponding analytical expressions have been derived. X-ray scattering factors calculated from the numerical wave functions are parameterized [in the sin({$\theta$})/{\it {$\lambda$}} ranges 0.0{--}2.0, 2.0{--}4.0 and 4.0{--}6.0 {\AA}${\sp {$-$}1}$] with six Gaussian functions, using the same method applied previously by Su & Coppens [{\it Acta Cryst.} (1997), A{\bf 53}, 749{--}762].},
keywords = {scattering factors, wave functions},
}

@article{Su_Coppens_1998,
author = "Su, Z. and Coppens, P.",
title = "{Nonlinear Least-Squares Fitting of Numerical Relativistic Atomic Wave Functions by a Linear Combination of Slater-Type Functions for Atoms with {\it Z} = 1{--}36}",
journal = "Acta Crystallographica Section A",
year = "1998",
volume = "54",
number = "5",
pages = "646--652",
month = "Sep",
doi = {10.1107/S0108767398003390},
url = {https://doi.org/10.1107/S0108767398003390},
abstract = {New relativistic atomic ground-state wave functions calculated by using the Dirac{--}Fock program package {\it GRASP}92 [Parpia {\it et al.} (1996). {\it Comput. Phys. Commun}. {\bf 94}, 249{--}271; Su & Coppens (1997). {\it Acta Cryst.} A{\bf 53}, 749{--}762, (1998). {\it Acta Cryst.} A{\bf 54}, 357] for atoms H through Kr ({\it Z}=1{--}36) have been fitted by a linear combination of Slater-type functions using a nonlinear least-squares procedure. These analytical expressions allow derivation of closed-form expressions for the X-ray scattering factors of the core and valence electrons and for the atomic densities and electrostatic properties of the pseudoatoms, the latter being required for the evaluation of physical properties from accurate X-ray diffraction data. All results are accessible {\it via} http://wings.buffalo.edu/~chem9982.},
}

