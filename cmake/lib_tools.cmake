MACRO(SETUP_OBJ_LIB LIB_NAME)
    ADD_LIBRARY(${LIB_NAME} OBJECT ${TARGET_H} ${TARGET_SRC})
    #SET_TARGET_PROPERTIES(${LIB_NAME} PROPERTIES LINKER_LANGUAGE CXX)
    SET_PROPERTY(TARGET ${LIB_NAME} PROPERTY FOLDER "libs")
    if(MT_MSVC_RUNTIME_LIB AND MSVC)
        set_property(TARGET ${LIB_NAME} PROPERTY  CXX_STANDARD 17)
        set_property(TARGET ${LIB_NAME} PROPERTY MSVC_RUNTIME_LIBRARY "MultiThreaded$<$<CONFIG:Debug>:Debug>")
    endif(MT_MSVC_RUNTIME_LIB AND MSVC)    
ENDMACRO(SETUP_OBJ_LIB LIB_NAME)
